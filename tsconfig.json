{
	"compilerOptions": {
		"target": "es6",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"allowJs": true,
		"checkJs": true
	},
	"include": ["src/**/*", "prisma/**/*", "shared/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
