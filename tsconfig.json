{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true
	},
	"lib": [
		"ESNext",
		"DOM"
	],
	"include": ["src/**/*", "prisma/**/*", "shared/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "web/**", "dist"]
}
