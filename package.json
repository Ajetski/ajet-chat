{
	"name": "graphql",
	"version": "1.0.0",
	"license": "MIT",
	"engines": {
		"node": "18.x"
	},
	"scripts": {
		"heroku-postbuild": "yarn && (cd web && yarn) && yarn build",
		"migrate": "yarn generate && prisma db push",
		"generate": "yarn generate:graphql && yarn generate:prisma",
		"generate:graphql": "graphql-codegen",
		"generate:prisma": "prisma generate",
		"prebuild": "yarn generate",
		"build": "(cd web && yarn build) && tsc",
		"start": "node --es-module-specifier-resolution=node dist/src/index.js",
		"dev": "nodemon src/index.ts",
		"dev-old": "yarn build && concurrently \"yarn generate:prisma --watch\" \"yarn generate:graphql --watch\" \"yarn dev:server\" \"yarn dev:web\"",
		"dev:server": "nodemon src/index.ts",
		"dev:web": "cd web && yarn dev",
		"format": "prettier -w ."
	},
	"dependencies": {
		"@apollo/client": "^3.5.10",
		"@prisma/client": "^3.14.0",
		"apollo-server-core": "^3.6.3",
		"apollo-server-express": "^3.6.3",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"express": "^4.17.3",
		"graphql": "^16.3.0",
		"graphql-upload": "^13.0.0",
		"peer": "^0.6.1",
		"peerjs": "^1.3.2",
		"socket.io": "^4.5.1",
		"socket.io-client": "^4.5.1",
		"svelte-apollo": "^0.5.0",
		"ts-node": "^10.8.0",
		"utility-types": "^3.10.0"
	},
	"devDependencies": {
		"@graphql-codegen/add": "^3.1.1",
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/typescript": "^2.4.5",
		"@graphql-codegen/typescript-resolvers": "^2.5.2",
		"@playwright/test": "^1.21.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-node": "^1.0.0-next.76",
		"@sveltejs/kit": "^1.0.0-next.345",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.39",
		"@tsconfig/recommended": "^1.0.1",
		"@tsconfig/svelte": "^3.0.0",
		"@types/graphql-upload": "^8.0.11",
		"@types/node": "^17.0.21",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"concurrently": "^7.1.0",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"prettier-plugin-prisma": "^3.14.0",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^3.14.0",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.5",
		"svelte-preprocess": "^4.10.4",
		"tslib": "^2.3.1",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	},
	"type": "module"
}
