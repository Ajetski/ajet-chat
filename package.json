{
	"name": "graphql",
	"version": "1.0.0",
	"license": "MIT",
	"scripts": {
		"heroku-postbuild": "npm run migrate && npm run build",
		"migrate": "npm run generate && prisma db push",
		"generate": "graphql-codegen && prisma generate",
		"build": "vite build && tsc",
		"start": "node dist/src/index.js",
		"dev": "npm run generate && concurrently \"npm run dev:server\" \"npm run dev:web\"",
		"dev:server": "nodemon src/index.ts",
		"dev:web": "vite build --watch",
		"format": "prettier -w ."
	},
	"dependencies": {
		"@apollo/client": "^3.5.10",
		"@prisma/client": "^3.14.0",
		"apollo-server-core": "^3.6.3",
		"apollo-server-express": "^3.6.3",
		"cors": "^2.8.5",
		"dataloader": "^2.0.0",
		"express": "^4.17.3",
		"graphql": "^16.3.0",
		"graphql-upload": "^13.0.0",
		"peer": "^0.6.1",
		"peerjs": "^1.3.2",
		"socket.io": "^4.5.1",
		"socket.io-client": "^4.5.1",
		"svelte-apollo": "^0.5.0",
		"ts-node": "^10.7.0",
		"utility-types": "^3.10.0"
	},
	"devDependencies": {
		"@graphql-codegen/add": "^3.1.1",
		"@graphql-codegen/cli": "^2.6.2",
		"@graphql-codegen/typescript": "^2.4.5",
		"@graphql-codegen/typescript-resolvers": "^2.5.2",
		"@sveltejs/vite-plugin-svelte": "^1.0.0-next.39",
		"@tsconfig/recommended": "^1.0.1",
		"@tsconfig/svelte": "^3.0.0",
		"@types/graphql-upload": "^8.0.11",
		"@types/node": "^17.0.21",
		"concurrently": "^7.1.0",
		"nodemon": "^2.0.15",
		"prettier": "^2.5.1",
		"prettier-plugin-prisma": "^3.14.0",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^3.14.0",
		"svelte": "^3.46.4",
		"svelte-check": "^2.4.5",
		"svelte-preprocess": "^4.10.4",
		"tslib": "^2.3.1",
		"typescript": "^4.6.2",
		"vite": "^2.8.6"
	}
}
