{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
		"allowJs": true,
		"checkJs": false,
		"sourceMap": true
	},
	"lib": ["ESNext"],
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "dist"]
}
